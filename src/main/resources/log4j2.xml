<Configuration status="debug">
  <Properties>
    <Property name="LOG_PATTERN">%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
  </Properties>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%highlight{${LOG_PATTERN}}"/>
    </Console>
    <File name="File1" fileName="gyorfi_pal.log" append="false">
      <PatternLayout pattern="${LOG_PATTERN}"/>
      <ThresholdFilter level="VIOLATION" onMatch="ACCEPT" onMismatch="DENY"/>
    </File>
    <RollingFile name="RollingFile" fileName="messages.log"
                 filePattern="messages%i.log.zip">
      <PatternLayout>
        <Pattern>${LOG_PATTERN}</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="1 KB"/>
      </Policies>
      <DefaultRolloverStrategy max="5"/>
    </RollingFile>

  </Appenders>
  <Loggers>
    <Root level="all">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="File1"/>
      <AppenderRef ref="RollingFile"/>
    </Root>
    <Logger name="pkg.Main" additivity="true">
      <AppenderRef ref="Console"/>
    </Logger>
  </Loggers>
</Configuration>